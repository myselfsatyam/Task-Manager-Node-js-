<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-2 outline-none  bg-zinc-800" type="text" placeholder="Title goes here" name="title">
                <textarea class="block w-full px-5 py-2 resize-none bg-zinc-800"  placeholder="Write your task details" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Add task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap p-10">
            <% if(files.length >0) { %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72  px-4 py-3 rounded-md bg-blue-600">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center">
                            <a href="/file/<%= val %>" class="text-blue-200 inline-block ">Read more.</a>
                        <a href="/edit/<%= val %>" class="text-zinc-600  ">Edit filename</a>
                        </div>
                        
                    </div>

                <% }) %>
                <% } else { %> 
                    <h3 class="text-zinc-600">No task yet</h3>
                 <%} %>
           
            
            
           
        </div>
    </div>

    <script src="/javascripts/script.js"></script> 
</body>
</html>